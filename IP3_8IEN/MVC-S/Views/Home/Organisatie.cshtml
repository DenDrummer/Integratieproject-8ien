@model IP3_8IEN.BL.Domain.Data.Organisatie

@{
    ViewBag.Title = "Organisatie";
}
<br />
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informatie
            </div>
            <div class="panel-body">
                <div class="row" style="padding-left:5px;">
                    <div class="col-lg-8 col-md-8" style="background-color:#f8f8f8; padding-left:1px; padding-right: 1px;">
                        <div style="position: relative; left: 0; top: 0;">
                            <img src="@ViewBag.TWITBANNER" alt="" style="height: 50%; width: 100%; display:inline-block; position: relative; top: 0; left: 0;" />
                            <img src="@ViewBag.TWITIMAGE" alt="" style="height: 150px; width: 150px; border-radius:50%; border:2px solid white; position: absolute;top: 70%; left: 40%;" />
                        </div>
                        <div class="row" style="padding-top:80px; padding-left:40px; padding-right:5px;">
                            <div class="col-lg-6 col-md-6">
                                <table>
                                    <tr>
                                        <td valign="top"><b>@Html.DisplayNameFor(model => model.Naam): </b></td>
                                        <td>@Html.DisplayFor(model => model.Naam)</td>
                                    </tr>
                                    <tr>
                                        <td valign="top"><b>@Html.DisplayNameFor(model => model.Twitter):</b> </td>
                                        <td>@Html.DisplayFor(model => model.Twitter)</td>
                                    </tr>
                                    <tr>
                                        <td valign="top"><b>@Html.DisplayNameFor(model => model.Oprichter):</b> </td>
                                        <td>@Html.DisplayFor(model => model.Oprichter.Naam)</td>
                                    </tr>
                                    <tr>
                                        <td valign="top"><b>@Html.DisplayNameFor(model => model.Leider):</b> </td>
                                        <td>@Html.DisplayFor(model => model.Leider.Naam)</td>
                                    </tr>
                                    <tr>
                                        <td valign="top" style="color:#00295C"><b>Trend:</b> </td>
                                        <td>@ViewBag.Trend</td>
                                    </tr>
                                    <tr>
                                        <td valign="top" style="color:#00295C"><b>Aantal Vermeldingen:</b> </td>
                                        <td>@ViewBag.Vermeldingen</td>
                                    </tr>
                                    <tr></tr>
                                    <tr>
                                        <td valign="top" style="color:#00295C"><b>Gekoppelde Termen:</b> </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <ul style="overflow: scroll; height: 43px; overflow-x: hidden; width:350px">

                                                
                                                @for (int i = 0; i < ViewBag.VaakVoorkomendeTermen?.Count; i++)
                                                {
                                                <li>@ViewBag.VaakVoorkomendeTermen[i]</li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top" style="color:#00295C"><b>Vaak voorkomende Woorden:</b> </td>
                                    </tr>
                                    <tr >
                                        <td colspan="2">
                                            <ul style="overflow: scroll; height: 43px; overflow-x: hidden; width:100%">

                                                @for (int i = 0; i < ViewBag.VaakVoorkomendeWoorden?.Count; i++)
                                                {
                                                <li>@ViewBag.VaakVoorkomendeWoorden[i]</li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top" style="color:#00295C"><b>Vaak voorkomende Verhalen:</b> </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <ul style="overflow: scroll; height: 43px; overflow-x: hidden; width:350px">

                                                @for (int i = 0; i < ViewBag.VaakVoorkomendeVerhalen?.Count; i++)
                                                {
                                                <a href="@ViewBag.VaakVoorkomendeVerhalen[i]">
                                                    <li>@ViewBag.VaakVoorkomendeVerhalen[i]</li>
                                                </a>
                                                }
                                            </ul>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div>
                                    <table>
                                        <tr>
                                            <td valign="top"><b>@Html.DisplayNameFor(model => model.Afkorting): </b></td>
                                            <td>@Html.DisplayFor(model => model.Afkorting)</td>
                                        </tr>
                                        <tr>
                                            <td valign="top"><b>@Html.DisplayNameFor(model => model.Facebook):</b> </td>
                                            <td>@Html.DisplayFor(model => model.Facebook)</td>
                                        </tr>
                                        <tr>
                                            <td valign="top"><b>@Html.DisplayNameFor(model => model.Oprichtingsdatum):</b> </td>
                                            <td>@Html.DisplayFor(model => model.Oprichtingsdatum)</td>
                                        </tr>
                                        <tr>
                                            <td valign="top"><b>@Html.DisplayNameFor(model => model.Ideologie):</b> </td>
                                            <td>@Html.DisplayFor(model => model.Ideologie)</td>
                                        </tr>
                                        <tr>
                                            <td valign="top"><b>@Html.DisplayNameFor(model => model.Tewerkstellingen):</b> </td>
                                        </tr>
                                    </table>
                                    <div>
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <ul style="overflow: scroll; height: 238px; overflow-x: hidden; width:300px">
                                                            @for (int i = 0; i < ViewBag.Tewerkstellingen?.Count; i++)
                                                            {
                                                                var persoon = ViewBag.Tewerkstellingen[i];
                                                            <li>
                                                                @Html.ActionLink((String)persoon.Naam, "Personen", "Home", new { onderwerpId = persoon.OnderwerpId}, null)
                                                            </li>
                                                            }
                                                        </ul>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        @if (Model.Twitter != null)
                        {
                            <form role="form">
                                <a class="twitter-timeline" data-lang="nl" data-height="500" data-theme="light" data-link-color="#00295C" href="@($"https://twitter.com/{Model.Twitter}?ref_src=twsrc%5Etfw")">Tweets by de_NVA</a>
                                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Chart
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-6 col-md-6"  style="height: 200px" id="persoon-chart1">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>