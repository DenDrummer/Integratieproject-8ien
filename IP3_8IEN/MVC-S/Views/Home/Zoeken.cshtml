<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>jQuery UI Autocomplete functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <!-- Javascript -->
    <script>
        $(document).ready(function () {
            @{List<string> listFromController = (List<string>)ViewData["names"];}
                var Names = [
                        @for (int i = 0; i < listFromController.Count; i++)
                        {
                            @: '@(listFromController[i])',
                        }
                    ]
            $(".automplete-1").autocomplete({
                //minLength: 2,
                source: Names
            });
        });
    </script>
</head>

<body>

    @using (Html.BeginForm("Personen", "Home"))
    {
        <h2>Zoeken</h2>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div id="custom-search-input" style="padding: 3px; border: solid 1px #E4E4E4; border-radius: 6px; width:107%; margin-left:-38px; background-color: #fff;">
                        <div class="input-group col-lg-12">
                            <input type="text" class="form-control input-lg automplete-1" name="automplete" style="border: 0; box-shadow: none;"/>
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-lg btn-default save" type="submit" style="margin: 2px 0 0 0; background: none; box-shadow: none; border: 0; color: #666666; padding: 0 8px 0 10px; border-left: solid 1px #ccc;">
                                    <i class="glyphicon glyphicon-search" style="font-size: 23px;"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>