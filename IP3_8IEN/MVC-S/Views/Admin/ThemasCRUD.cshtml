@model IEnumerable<IP3_8IEN.BL.Domain.Data.Thema>

@{
    ViewBag.Title = "ThemasCRUD";
}

<div style="padding-top:10px; padding-bottom:10px">
    <i class="fas fa-user-circle" style="font-size: 28px; color:#00295C; display:inline"></i><h2 style="color:#00295C; display: inline;">@Html.ActionLink("  Admin Omgeving", "Index")</h2> <h3 style="color:#00295C; display: inline;"> > Themas CRUD</h3>
    <hr />
</div>

<div>
    <a href="@Url.Action("Themas","Admin")" class="btn btn-default" type="button" style="height:100%; width:250px; border: 2px solid #00295C">
       <p style="font-size:18px; color:#00295C; padding-top:6px; vertical-align:auto;">Nieuwe Thema Aanmaken</p>
    </a>
    <hr />
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschrijving)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschrijving)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OnderwerpId }) |
            @Html.ActionLink("Details", "Details", new { id = item.OnderwerpId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OnderwerpId })
        </td>
    </tr>
}

</table>
