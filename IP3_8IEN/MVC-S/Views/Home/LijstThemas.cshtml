@model IEnumerable<IP3_8IEN.BL.Domain.Data.Thema>
@{
    ViewBag.Title = "LijstThemas";
}

<h2>LijstThemas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Hieronder ziet u een overzicht van alle Personen in onze databank.
            </div>
            <div class="panel-body">
                <table style="width:100%" class="table table-striped table-bordered table-hover" id="themasTable">
                    <thead>
                        <tr class="odd gradeX">
                            <th>Thema Naam</th>
                            <th>Hashtags</th>
                            <th>Aantal Vermeldigingen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@Html.ActionLink(t.Naam, "Themas", "Home", new { }, null)</td>
                                <td>
                                    <ul style="list-style:none;padding-left:0px">
                                        @foreach (string h in t.Hashtags)
                                        {
                                            string hash = $"#{h}";
                                            <li>@Html.DisplayFor(m => hash)</li>
                                        }
                                    </ul>
                                </td>
                                <td>@Html.DisplayFor(m => t.SubjectMessages.Count)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#themasTable').DataTable();
        });</script>
}