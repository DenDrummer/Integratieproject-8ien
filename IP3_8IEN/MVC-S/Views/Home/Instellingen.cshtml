@{
    ViewBag.Title = "Instellingen";
}
<h2>@ViewBag.Title</h2>


<ul class="nav nav-tabs">
    <li class="active"><a href="#info" data-toggle="tab">Gebruikersprofiel</a></li>
    <li><a href="#settings" data-toggle="tab">Account Verwijderen</a></li>
    <li><a href="#paswoord" data-toggle="tab">Paswoord</a></li>
    <li><a href="#layout" data-toggle="tab">Layout </a></li>
</ul>

<div class="tab-content well">
    <div class="tab-pane active col-lg-12" id="info">
        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Voornaam</label>
                        <div class="col-lg-10">
                            <input type="text" name="txtVoornaam" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Achternaam</label>
                        <div class="col-lg-10">
                            <input type="text" name="txtAchternaam" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Gebruikersnaam</label>
                        <div class="col-lg-10">
                            <input type="text" name="txtUsername" class="form-control" style="background-color:darkgray"  readonly >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="email" name="emEmail" class="form-control" style="background-color:darkgray"  readonly >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Geboortedatum</label>
                        <div class="col-lg-10">
                            <input type="date" name="dateGeboortedatum" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" value="Opslaan" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="settings">
        <div class="row">
            <div class="col-lg-12">
                <table>
                    <tr>
                        <td><b>Wilt u uw account verwijderen van het platform? </b></td>
                    </tr>
                    <tr>
                        <td colspan="2"><button type="button" class="btn btn-default">Verwijder Account</button></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="paswoord">
        <div class="row">
            <div class="col-md-12">
                @RenderPage("~/Views/Manage/ChangePassword.cshtml")
            </div>
        </div>
    </div>
    <div class="tab-pane" id="layout">
        Address Tab Content goes here
    </div>
</div>
