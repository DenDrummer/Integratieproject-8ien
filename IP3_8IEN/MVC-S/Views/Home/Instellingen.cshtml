@{
    ViewBag.Title = "Instellingen";
}
<h2>@ViewBag.Title</h2>


<ul class="nav nav-tabs">
    <li class="active"><a href="#info" data-toggle="tab">Gebruikersprofiel</a></li>
    <li><a href="#settings" data-toggle="tab">Account Verwijderen</a></li>
    <li><a href="#paswoord" data-toggle="tab">Paswoord</a></li>
    <li><a href="#layout" data-toggle="tab">Layout </a></li>
</ul>

<div class="tab-content well">
    <div class="tab-pane active col-lg-12 col-md-12" id="info">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <table>
                    <tr>
                        <td><b>Wilt u uw account verwijderen van het platform? </b></td>
                    </tr>
                    <tr>
                        @*<td colspan="2"><button type="button" class="btn btn-default">Verwijder Account</button></td>*@
                        <td colspan="2"><button type="button" class="btn btn-default">@Html.ActionLink("Wijzig gegevens", "EditUserAccount")</button></td>

                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="settings">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <table>
                    <tr>
                        <td><b>Wilt u uw account verwijderen van het platform? </b></td>
                    </tr>
                    <tr>
                        @*<h4 style="color:#00295C; display: inline;">@Html.ActionLink("Verwijder Account", "Instellingen")</h4>*@
                        <td colspan="2"><button type="button" class="btn btn-default">@Html.ActionLink("Verwijder Account", "DeleteUser")</button></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="tab-pane" id="settings">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <table>
                    <tr>
                        <td><b>Wilt u uw account verwijderen van het platform? </b></td>
                    </tr>
                    <tr>
                        <td colspan="2"><button type="button" class="btn btn-default">Verwijder Account</button></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="paswoord">
        <div class="row">
            <div class="col-md-12">
                @RenderPage("~/Views/Manage/ChangePassword.cshtml")
            </div>
        </div>
    </div>
    <div class="tab-pane" id="layout">
        Address Tab Content goes here
    </div>
</div>
