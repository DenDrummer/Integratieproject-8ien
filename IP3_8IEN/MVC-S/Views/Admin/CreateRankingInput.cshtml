@model MVC_S.Models.RankViewModel

@{
    ViewBag.Title = "CreateRankingInput";
}

<div style="padding-top:10px; padding-bottom:10px">
    <i class="fas fa-user-circle" style="font-size: 28px; color:#00295C; display:inline"></i><h2 style="color:#00295C; display: inline;">@Html.ActionLink("  Admin Omgeving", "Index")</h2> <h3 style="color:#00295C; display: inline;"> > Nieuwe Ranking</h3>
    <hr />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="span3">
        <form>
            <label>Naam grafiek</label>
            <input type="text" name="naam" class="span3">
            <label>Aantal</label>
            <input type="number" name="aantal" class="span3">
            <label>Interval</label>
            <input type="number" name="interval" class="span3"><br /><br />
            <input type="submit" value="Create Ranking" class="btn btn-default" style="width:180px;">
            <div class="clearfix"></div>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}