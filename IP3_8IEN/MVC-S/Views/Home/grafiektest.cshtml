        userId: 'JordenL',
        projectId: 'test',
        functionId: 'test3',
        canvasId: 'c',
        autoplay: true
    };

    // Initialize the NodeBox player object
    ndbx.embed(options, function(err, player) {
        if (err) {
            throw new Error(err);
        } else {
            window.player = player;
        }
    });
