@model IList<IP3_8IEN.BL.Domain.Data.Hashtag>

@{
    /**/

    ViewBag.Title = "Themas";
}

<div style="padding-top:10px; padding-bottom:10px">
    <i class="fas fa-user-circle" style="font-size: 28px; color:#00295C; display:inline"></i><h2 style="color:#00295C; display: inline;">@Html.ActionLink("  Admin Omgeving", "Index")</h2> <h3 style="color:#00295C; display: inline;">@Html.ActionLink(" > Themas CRUD", "ThemasCRUD")</h3><h4 style="color:#00295C; display: inline;"> > Nieuw Thema Aanmaken</h4>
    <hr />
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="span3">
        <form>
            <label style="color:#00295C">Naam Thema</label>
            <input type="text" name="naam" class="span3">
            <label style="color:#00295C">Beschrijving Thema</label>
            <input type="text" name="beschrijving" class="span3">
            <br /><br />

            <div class="clearfix"></div>
            <hr />


            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover" id="adminUserTable">
                                <thead>
                                    <tr class="odd gradeX">
                                        <th style="width:25%;">Hashtag</th>
                                        <th style="width:18%;">Vermelding</th>
                                        <th style="width:13%;">Thema</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 0; i < Model.Count; i++)
                                    {
                                    <tr>
                                        <td>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(x => x[i].OnderwerpId)
                                            @Html.HiddenFor(x => x[i].Naam)
                                            @Html.DisplayFor(x => x[i].Naam, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(x => x[i].Vermelding, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                        <td>
                                            @Html.EditorFor(x => x[i].Thema, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <input type="submit" value="Nieuw Thema Toevoegen" class="btn btn-default" style="width:180px; border:1px solid #00295C">
            </div>
        </form>
    </div>
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#adminUserTable').DataTable({
                'iDisplayLength': 100000
            });
        });</script>
}