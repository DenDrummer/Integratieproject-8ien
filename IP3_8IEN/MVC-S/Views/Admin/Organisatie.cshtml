@model IEnumerable<IP_8IEN.BL.Domain.Data.Organisatie>

@{
    ViewBag.Title = "Organisatie";
}

<h2>Organisatie</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOrganisatie", new { id = item.OnderwerpId }) |
                @Html.ActionLink("Details", "DetailsOrganisatie", new { id = item.OnderwerpId }) |
                @Html.ActionLink("Delete", "DeleteOrganisatie", new { id = item.OnderwerpId })
            </td>
        </tr>
    }

</table>