                            <label for="message1">label voor de chart: </label>
                            <input type="text" id="message1" name="message1" value="aantal tweets: "/>
                            <button id="buttonReload1">herlaad</button>
                         
                                <button id="buttonSave1">opslaan naar dashboard</button>
                            }
@*                            <button id="buttonAxe1">verander assen</button>*@
                        </div>

                    </div>
                                        <div class="col-lg-6 col-md-6">
                                                <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                               Aantal tweets van @Model.Naam
                                
                            </div>
                                                    <div class="panel-body">
                                                        <div id="persoon-chart2"></div>

                                                    </div>
                                                    @using Microsoft.AspNet.Identity
                                                    @if (Request.IsAuthenticated)
                                                    {
                            <label for="aantaldagen2">Hoeveel dagen terug: </label>
                            <input type="text" id="aantaldagen2" name="aantaldagen2" value="5"/>
                            <label for="message2">label voor de chart: </label>
                            <input type="text" id="message2" name="message2" value="aantal tweets: "/>
                            <button id="buttonReload2">herlaad</button>
                
                            <button id="buttonSave2">opslaan naar dashboard</button>
                        }
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script type="text/javascript">
    setOnderwerpId(@Model.OnderwerpId);
    setNaam("@Model.Naam");
    makeChart();
    makeChart2();

</script>
