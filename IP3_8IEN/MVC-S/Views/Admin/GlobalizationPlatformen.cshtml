@model IEnumerable<IP3_8IEN.BL.Domain.Globalization.GlobalizationPlatform>

@{
    ViewBag.Title = "Globalization-Platformen";
}

<h2>Platformen</h2>

<p>
    @Html.ActionLink("Create New Globalization-Platform", "CreateGlobalizationPlatform")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Platform)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGlobalizationPlatform", new { platformId = item.PlatformId }) |
                @Html.ActionLink("Details", "DetailsGlobalizationPlatform", new { platformId = item.PlatformId }) |
                @Html.ActionLink("Delete", "DeleteGlobalizationPlatform", new { platformId = item.PlatformId })
            </td>
        </tr>
    }
</table>
