@model IP_8IEN.BL.Domain.Data.Persoon

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>jQuery UI Autocomplete functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <!-- Javascript -->
    <script>
        $(function () {
            @{List<string> listFromController = (List<string>)ViewData["names"];}
                var Names = [
                        @for (int i = 0; i < listFromController.Count; i++)
                        {
                            @: '@(listFromController[i])',
                        }
                    ]
            $("#automplete-1").autocomplete({
                minLength: 2,
                delay: 500,
                source: Names
            });
        });
    </script>
</head>

<body>
    <!-- HTML -->

    @using (Html.BeginForm("Personen", "Home"))
    {
        <div class="ui-widget">
            <p>Search</p>
            <label for="automplete-1">Naam: </label>
            <input type="text" name="automplete" id="automplete-1">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }
</body>
</html>