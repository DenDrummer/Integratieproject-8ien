<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>jQuery UI Autocomplete functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <!-- Javascript -->
    <script>
        $(document).ready(function () {
            @{List<string> listFromController = (List<string>)ViewData["names"];}
                var Names = [
                        @for (int i = 0; i < listFromController.Count; i++)
                        {
                            @: '@(listFromController[i])',
                        }
                    ]
            $(".automplete-1").autocomplete({
                //minLength: 2,
                source: Names
            });
        });
    </script>
</head>

<body>
    <!-- HTML -->

    @using (Html.BeginForm("Personen", "Home"))
    {
        <div class="ui-widget">
            <p>Search</p>
            <label>Naam: </label>
            <input type="text" name="automplete" class="automplete-1">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default save" />
            </div>
        </div>
    }
</body>
</html>